
# Optional: Zus√§tzliche Module aktivieren
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'git' \
  'prompt' \
  'autosuggestions' \
  'syntax-highlighting'


zstyle ':prezto:module:prompt' theme 'pure'

# Prezto
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

eval "$(atuin init zsh)"
source <(atuin gen-completions --shell zsh)

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export PATH=$PATH:~/.local/share/JetBrains/Toolbox/scripts

source ~/.anymotion/bash

alias ll='ls -la --color=auto'
alias lsa='ll'
alias task='go-task'
alias vim='nvim'

alias website-status-checker='docker run --rm -it -v "$(pwd):/app" /etc/hosts:/etc/hosts gitlab.anymotion.de:4567/devops/software/website-status-check:latest'

# Added by LM Studio CLI (lms)
export PATH="$PATH:/home/seb/.lmstudio/bin"
export PATH="$PATH:/home/seb/.scripts"
